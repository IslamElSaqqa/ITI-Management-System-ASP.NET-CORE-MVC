@using ITIEntities
@model IEnumerable<Department> // Avoids Adding data to that nodel
    @{
        Layout = null;
    }

<!DOCTYPE >
<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <title>Index</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

    </head>
    <body>
        <a asp-action="create" class="btn btn-info">Create</a>
        <table class="table table-bordered table-hover">
            <tr>
                <th>Department Id</th>
                <th>Name</th>
                <th>Capacity</th>
                <th>Actions</th>
           </tr>
        @if (Model == null || Model.Count() == 0)
            {
                <tr> 
                    <td colspan="4" class="text-center">No Data Found </td>
                </tr>    
            }
            else { 

           @foreach (var item in Model)
            {
                <tr> 
                      <td>@item.DeptId</td>
                      <td>@item.DeptName </td>
                       <td>@item.Capacity</td>
                       <td>
                           <a asp-action="details" asp-controller="department" asp-route-id="@item.DeptId" class="btn btn-info">Details</a>
                        <a asp-action="Edit" asp-controller="department" asp-route-id="@item.DeptId" class="btn btn-danger">Edit</a>
                       </td>
                </tr>    
            
            }
         }
        </table>




    </body>
</html>






